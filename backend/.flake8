[flake8]
max-line-length = 79
extend-ignore = E203, W503, Q000
max-complexity = 10

inline-quotes = double
multiline-quotes = double
docstring-quotes = double

classmethod-decorators = classmethod,validator

exclude =
    .git,
    __pycache__,
    build,
    dist,
    venv,
    .venv,
    migrations

per-file-ignores =
    __init__.py: F401, F403
    tests/*.py: S101, N802